<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <form action="/posts<%= getPostQueryString() %>" method="post">

        <div class="form-group">
          <label for="title">제목</label>
          <input type="text" maxlength="19" id="title" name="title" value="<%= post.title %>" class="form-control <%= (errors.title)?'is-invalid':'' %>">
          <% if(errors.title){ %>
            <span class="invalid-feedback"><%= errors.title.message %></span>
          <% } %>
        </div>

        <div class="form-group">
          <label for="body">내용</label>
          <textarea id="body" name="body" rows="5" class="form-control <%= (errors.body)?'is-invalid':'' %>"><%= post.body %></textarea>
          <% if(errors.body){ %>
            <span class="invalid-feedback"><%= errors.body.message %></span>
          <% } %>
        </div>

        <% if(errors.unhandled){ %>
          <div class="invalid-feedback d-block">
            <%= errors.unhandled %>
          </div>
        <% } %>

        <div align="right">
          <a class="btn btn-primary" href="/posts<%= getPostQueryString() %>">뒤로</a>
          &nbsp;
          <button type="submit" class="btn btn-primary">등록</button>
        </div>

      </form>

    </div>
  </body>
</html>
